{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src"
        },
        {
            "name": "Launch Go API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/cmd/api/main.go",
            "cwd": "${workspaceFolder}/backend/",
            "env": {},
            "args": []
        }
    ]
}